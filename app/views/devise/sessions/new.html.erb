<div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
  <div class="card" style="width: 400px;"> <!-- Set the width of the card here -->
    <div class="card-body">
      <h2 class="card-title text-center">Sign in</h2>
      
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin" }) do |f| %>
        <div class="mb-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email address" %>
        </div>

        <div class="mb-3">
          <%= f.label :password, class: "form-label" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="mb-3">
            <%= f.check_box :remember_me, class: "form-check-input" %>
            <%= f.label :remember_me, class: "form-check-label" %>
          </div>
        <% end %>

        <div class="mb-3">
          <%= f.submit "Sign in", class: "btn btn-primary w-100" %> <!-- Full width button -->
        </div>

        <div class="mt-3 text-center">
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-muted" %>
        </div>
      <% end %>
    </div>
  </div>
</div>